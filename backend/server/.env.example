# Environment configuration for SIEM AI Agent
# Copy this file to .env and configure the values for your environment

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# === OpenSearch Configuration ===
# Primary OpenSearch/Wazuh connection
OPENSEARCH_HOST=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=changeme
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_TIMEOUT=30
OPENSEARCH_MAX_RETRIES=3

# Alternative OpenSearch hosts (comma-separated)
OPENSEARCH_BACKUP_HOSTS=https://localhost:9200,http://127.0.0.1:9200

# === SIEM Data Configuration ===
# Force mock data mode (useful for development/testing)
FORCE_MOCK_DATA=false
MOCK_DATA_FILE=mock_siem_data.json

# === NLP Configuration ===
# Future configuration for actual NLP models
NLP_MODEL_TYPE=mock
NLP_MODEL_PATH=./models
NLP_CONFIDENCE_THRESHOLD=0.7

# === Context Management ===
MAX_SESSIONS=1000
SESSION_TIMEOUT_HOURS=24
CONTEXT_HISTORY_SIZE=10

# === Security Configuration ===
# API Keys for authentication (if implemented)
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=*
ENABLE_CORS=true

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_FILE=./logs/siem_ai_agent.log
ENABLE_FILE_LOGGING=false

# === Report Configuration ===
REPORT_MAX_EVENTS=1000
REPORT_CACHE_TTL_MINUTES=30
ENABLE_REPORT_CACHING=true

# === Performance Configuration ===
MAX_QUERY_SIZE=100
DEFAULT_QUERY_SIZE=20
QUERY_TIMEOUT_SECONDS=30

# === Development Configuration ===
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_METRICS=true